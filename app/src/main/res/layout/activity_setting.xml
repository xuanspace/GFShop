<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slideswitch="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#ffefeff4">

    <include layout="@layout/header_setting2" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            style="@style/h_line"
            android:layout_marginTop="20dip" />

        <RelativeLayout
            android:id="@+id/setting1"
            style="@style/option_item_rl">

            <TextView
                style="@style/option_item_text_parent"
                android:text="消息提醒"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_14" />

            <com.topway.fine.widget.SlideSwitch
                android:id="@+id/setting1_on"
                android:layout_width="40dip"
                android:layout_height="20dip"
                android:layout_alignParentRight="true"
                slideswitch:isOpen="true"
                slideswitch:shape="rect"
                slideswitch:themeColor="#f23331a0" />

        </RelativeLayout>


    </LinearLayout>

    <View style="@style/h_line" />

    <RelativeLayout
        android:id="@+id/setting_cache"
        style="@style/option_item_rl">

        <TextView
            android:id="@+id/cache_clean"
            style="@style/option_item_text_parent"
            android:text="清除缓存"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arraow_right" />

    </RelativeLayout>

    <View style="@style/h_line" />

    <RelativeLayout
        android:id="@+id/setting_update"
        android:layout_marginTop="10dp"
        style="@style/option_item_rl">

        <TextView
            android:id="@+id/version_update"
            style="@style/option_item_text_parent"
            android:text="版本更新"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/version_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/version_update"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@+id/setting_right_icon2"
            android:text="1.1.0"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:id="@+id/setting_right_icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arraow_right" />

    </RelativeLayout>

    <View style="@style/h_line" />

    <RelativeLayout
        android:id="@+id/setting_feedback"
        style="@style/option_item_rl">

        <TextView
            style="@style/option_item_text_parent"
            android:text="意见反馈"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arraow_right" />

    </RelativeLayout>

    <View style="@style/h_line" />

    <RelativeLayout
        android:id="@+id/setting_aboutme"
        style="@style/option_item_rl">

        <TextView
            style="@style/option_item_text_parent"
            android:text="关于我们"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arraow_right" />

    </RelativeLayout>

    <View style="@style/h_line" />

    <RelativeLayout
        android:id="@+id/setting_exit"
        android:layout_marginTop="10dp"
        style="@style/option_item_rl">

        <TextView
            style="@style/option_item_text_parent"
            android:text="退出登录"
            android:textSize="@dimen/text_size_14" />

    </RelativeLayout>

    <View style="@style/h_line" />

</LinearLayout>




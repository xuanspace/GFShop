<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#ebebeb">

    <include layout="@layout/layout_main_title" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ebebeb"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#ebebeb"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textColor="#888888"
            android:textSize="14sp"
            android:text="发动机型号:"
            android:singleLine="true"
            android:textColorHint="#AAAAAA"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#d9d9d9" />

        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_bar_height"
            android:paddingBottom="10dp">

            <EditText
                android:id="@+id/ev_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:text=""
                android:hint="请输型号..."
                android:textColor="#353535"
                android:textSize="16sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#ebebeb"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textColor="#888888"
            android:textSize="14sp"
            android:text="分类排序(值越大越靠前):" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#d9d9d9"/>

        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_bar_height">

            <TextView
                android:id="@+id/tv_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_alignParentLeft="true"
                android:text="1"
                android:textColor="#353535"
                android:textSize="16sp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/re_logo"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#ebebeb"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textColor="#888888"
            android:textSize="14sp"
            android:text="发动机图片:" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#d9d9d9" />

        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_img_height">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/default_image"/>

            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="70dp"
                android:gravity="center_horizontal"
                android:text="选择发动机图片"
                android:textColor="@color/text_color_hint"
                android:textSize="14sp" />

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_save"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:text="保存"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</LinearLayout>


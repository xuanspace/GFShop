<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/personal_info_activity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="#fffafafa"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:scaleType="centerInside"
                android:src="@drawable/back_selecter" />

            <TextView
                android:id="@+id/title"
                android:textSize="18sp"
                android:textColor="#ff444444"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="6.0"
                android:ems="10"
                android:gravity="center_horizontal"
                android:text="个人信息" />

            <TextView
                android:id="@+id/skip_tv"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:ems="10"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="#00a0e9"
                android:textSize="16.0sp"
                android:visibility="invisible" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/personal_info_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="44.0dip">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="#ffdfdfdf" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="80.0dip"
                    android:background="#ffffffff">

                    <TextView
                        android:textSize="15sp"
                        android:textColor="#ff444444"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.0dip"
                        android:text="头像" />

                    <ImageView
                        android:id="@+id/iv_avator"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="30.0dip"
                        android:src="@drawable/default_useravatar" />


                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="#ffdfdfdf" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginTop="15.0dip"
                    android:background="#ffdfdfdf" />

                <RelativeLayout
                    android:id="@+id/re_nickname"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/layout_selector">

                    <TextView
                        android:id="@+id/text_nicheng"
                        android:textSize="15sp"
                        android:textColor="#ff444444"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.0dip"
                        android:paddingRight="15.0dip"
                        android:text="昵称" />

                    <TextView
                        android:id="@+id/tv_nick_name"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30.0dip"
                        android:layout_toRightOf="@+id/text_nicheng"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="未填写"
                        android:singleLine="true"
                        android:textColor="#ff000000"
                        android:textColorHint="@color/text_color_gray"
                        android:textCursorDrawable="@drawable/cursor_color" />

                    <TextView
                        android:textSize="15sp"
                        android:textColor="#ff444444"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12.0dip"
                        android:background="@drawable/arrow" />
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="15.0dip"
                    android:background="#ffdfdfdf" />

                <RelativeLayout
                    android:id="@+id/gender_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/layout_selector">

                    <TextView
                        android:textSize="15sp"
                        android:textColor="#ff444444"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.0dip"
                        android:text="性别" />

                    <TextView
                        android:id="@+id/gender_textview"
                        android:textSize="15sp"
                        android:textColor="#ff444444"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30.0dip"
                        android:gravity="right"
                        android:hint="未填写"
                        android:textColorHint="@color/text_color_gray" />
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="15.0dip"
                    android:background="#ffdfdfdf" />

                <RelativeLayout
                    android:id="@+id/birthday_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/layout_selector">

                    <TextView
                        android:textSize="15sp"
                        android:textColor="#ff444444"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.0dip"
                        android:text="生日" />

                    <TextView
                        android:id="@+id/birthday_textview"
                        android:textSize="15sp"
                        android:textColor="#ff444444"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30.0dip"
                        android:hint="未填写"
                        android:textColorHint="@color/text_color_gray" />
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="15.0dip"
                    android:background="#ffdfdfdf" />

                <RelativeLayout
                    android:id="@+id/address_area_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/layout_selector">

                    <TextView
                        android:textSize="15sp"
                        android:textColor="#ff444444"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.0dip"
                        android:text="地区" />

                    <TextView
                        android:id="@+id/area_textview"
                        android:textSize="15sp"
                        android:textColor="#ff444444"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30.0dip"
                        android:hint="未填写"
                        android:textColorHint="@color/text_color_gray" />
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="#ffdfdfdf" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginTop="15.0dip"
                    android:background="#ffdfdfdf"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/shipping_address_relativelayout"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/layout_selector"
                    android:visibility="gone">

                    <TextView
                        android:textSize="15sp"
                        android:textColor="#ff444444"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.0dip"
                        android:text="地址" />

                    <TextView
                        android:id="@+id/address_textview"
                        android:textSize="15sp"
                        android:textColor="#ff444444"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30.0dip"
                        android:text="未填写" />
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="#ffdfdfdf" />

                <TextView
                    android:id="@+id/modify_password_layout_line"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginTop="15.0dip"
                    android:background="#ffdfdfdf" />

                <RelativeLayout
                    android:id="@+id/modify_password_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/layout_selector">

                    <TextView
                        android:textSize="15sp"
                        android:textColor="#ff444444"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.0dip"
                        android:text="修改密码" />

                    <TextView
                        android:textSize="15sp"
                        android:textColor="#ff444444"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12.0dip"
                        android:background="@drawable/arrow" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/modify_password_layout_bottomline"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="#ffdfdfdf" />

                <TextView
                    android:id="@+id/logout_layout_line"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginTop="15.0dip"
                    android:background="#ffdfdfdf"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/logout_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/layout_selector"
                    android:visibility="gone">

                    <TextView
                        android:textSize="15sp"
                        android:textColor="#ff444444"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="退出" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/logout_layout_bottomline"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="#ffdfdfdf"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/update_userinfo_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="48.5dip"
                    android:layout_marginBottom="15.0dip"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginRight="15.0dip"
                    android:layout_marginTop="25.0dip"
                    android:background="@null"
                    android:gravity="center"
                    android:text="保存"
                    android:textColor="#8dc6ed"
                    android:textSize="21.0sp"
                    android:visibility="gone" />
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/personal_padding_tv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#33000000"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>
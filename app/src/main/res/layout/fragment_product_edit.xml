<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ebebeb"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_main_title" />

    <com.topway.fine.ui.scrollview.VerticalScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f6f6f6"
        android:fadingEdge="none"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ebebeb"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#ebebeb"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="添加产品:"
                    android:textColor="#888888"
                    android:textColorHint="#AAAAAA"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_light" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_name_lable"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="产品名称"
                    android:textColor="@color/gray" />

                <EditText
                    android:id="@+id/et_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_name_lable"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dp"
                    android:layout_toRightOf="@+id/tv_name_lable"
                    android:background="@android:color/transparent"
                    android:hint="输入产品名称..."
                    android:text=""
                    android:textColor="#353535"
                    android:textSize="14sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_light" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_description_lable"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="产品描述"
                    android:textColor="@color/gray" />

                <EditText
                    android:id="@+id/et_product_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_description_lable"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dp"
                    android:layout_toRightOf="@+id/tv_description_lable"
                    android:background="@android:color/transparent"
                    android:hint="输入产品描述..."
                    android:text=""
                    android:textColor="#353535"
                    android:textSize="14sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_light" />

            <RelativeLayout
                android:id="@+id/re_brand"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_barnd_lable"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="产品品牌"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/tv_brand_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_barnd_lable"
                    android:layout_toRightOf="@+id/tv_barnd_lable"
                    android:hint="请选择品牌..."
                    android:text="" />

                <ImageView
                    android:id="@+id/iv_select_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ic_setting_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_light" />

            <RelativeLayout
                android:id="@+id/re_serie"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_serie_lable"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="产品机型"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/tv_serie_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_serie_lable"
                    android:layout_toRightOf="@+id/tv_serie_lable"
                    android:hint="请选择机型..."
                    android:text="" />

                <ImageView
                    android:id="@+id/iv_select_serie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ic_setting_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_light" />


            <RelativeLayout
                android:id="@+id/re_engine"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_engine_lable"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="发动机型号"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/tv_engine_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_engine_lable"
                    android:layout_toRightOf="@+id/tv_engine_lable"
                    android:hint="请选择发动机型号..."
                    android:text="" />

                <ImageView
                    android:id="@+id/iv_select_engine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ic_setting_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_light" />


            <RelativeLayout
                android:id="@+id/re_category"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_categry_lable"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="部件类型"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/tv_categry_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_categry_lable"
                    android:layout_toRightOf="@+id/tv_categry_lable"
                    android:hint="部件类型..." />

                <TextView
                    android:id="@+id/tv_categry_path"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_categry_lable"
                    android:layout_toRightOf="@+id/tv_categry_lable"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/iv_select_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ic_setting_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_light" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_price_lable"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="部件单价"
                    android:textColor="@color/gray" />

                <EditText
                    android:id="@+id/et_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_price_lable"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dp"
                    android:layout_toRightOf="@+id/tv_price_lable"
                    android:background="@android:color/transparent"
                    android:digits="1234567890."
                    android:hint="输入产品描述..."
                    android:text="0.00"
                    android:textColor="#353535"
                    android:textSize="14sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_light" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_quntity_lable"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="产品数量"
                    android:textColor="@color/gray" />

                <EditText
                    android:id="@+id/et_quntity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_quntity_lable"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dp"
                    android:layout_toRightOf="@+id/tv_quntity_lable"
                    android:background="@android:color/transparent"
                    android:digits="1234567890"
                    android:hint="输入产品数量"
                    android:text="1"
                    android:textColor="#353535"
                    android:textSize="14sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="15dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:layout_marginLeft="10dp"
                    android:gravity="bottom|left"
                    android:paddingBottom="5dp"
                    android:text="产品图片"
                    android:textColor="@color/alpha_black"
                    android:textSize="14sp" />

                <GridView
                    android:id="@+id/gv_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:horizontalSpacing="3dp"
                    android:numColumns="4"
                    android:scrollbars="none"
                    android:verticalSpacing="5dp"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/re_upload"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_uploadSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="--M/--M"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/tv_netSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="---K/s"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/tv_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="--.--%"
                    android:textSize="10sp"/>

            </RelativeLayout>

            <com.topway.fine.ui.NumberProgressBar
                android:id="@+id/pb_progressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="15dip"
                app:progress_reached_bar_height="1.5dp"
                app:progress_reached_color="#3498DB"
                app:progress_text_color="#3498DB"
                app:progress_text_size="10sp"
                app:progress_unreached_bar_height="0.75dp"
                app:progress_unreached_color="#CCCCCC"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/btn_save"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:text="保存"
                android:textColor="@android:color/white"
                android:textSize="18sp" />


        </LinearLayout>

    </com.topway.fine.ui.scrollview.VerticalScrollView>

</LinearLayout>
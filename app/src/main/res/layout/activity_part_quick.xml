<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#ebebeb">

    <include layout="@layout/layout_main_title" />

    <RelativeLayout
        android:id="@+id/re_search"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="3dp"
        android:background="#fff"
        android:visibility="gone">

        <EditText
            android:id="@+id/tv_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/edit_line"
            android:gravity="bottom"
            android:paddingBottom="10dp"
            android:paddingLeft="46dp"
            android:singleLine="true"
            android:hint="搜索"
            android:textColor="@color/text_color_gray"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="21dp"
            android:layout_height="22dp"
            android:layout_alignBottom="@id/tv_search"
            android:layout_alignLeft="@id/tv_search"
            android:layout_margin="6dp"
            android:src="@drawable/search" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_serie"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ebebeb"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <TextView
            android:id="@+id/tv_region_temp"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="2dp"
            android:text="挖机型号:"
            android:textColor="#353535"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_switch"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="2dp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:clickable="true"
            android:textSize="12sp"
            android:background="@drawable/shape_button"
            android:text="按发动机" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="#DBDBDB" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_serie"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/table_view_item"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingLeft="15.0dip">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/line_gray"
            android:visibility="visible"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15.0dip"
            android:layout_marginTop="15.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_serie"
                android:layout_width="47dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dip"
                android:background="@drawable/excavator_mall"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_serie"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_serie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:paddingRight="10.0dip"
                    android:singleLine="true"
                    android:textColor="@color/text_color_black"
                    android:textSize="16.0sp"
                    android:hint="挖机型号..."/>


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_clean_serie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30.0dip"
                android:background="@drawable/close"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dip"
                android:background="@drawable/ic_setting_arrow"/>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_engine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/table_view_item"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingLeft="15.0dip"
        android:visibility="gone">

        <View
            android:id="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/line_gray"
            android:visibility="visible"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15.0dip"
            android:layout_marginTop="15.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_engine"
                android:layout_width="47dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dip"
                android:background="@drawable/excavator_mall"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_engine"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_engine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:paddingRight="10.0dip"
                    android:singleLine="true"
                    android:textColor="@color/text_color_black"
                    android:textSize="16.0sp"
                    android:hint="发动机型号..."/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_clean_engine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30.0dip"
                android:background="@drawable/close"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dip"
                android:background="@drawable/ic_setting_arrow"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/re_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10.0dip"
        android:paddingLeft="15.0dip"
        android:paddingTop="10.0dip"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="挖机配件"
                    android:textColor="#353535"
                    android:textSize="14.0sp"/>

                <TextView
                    android:id="@+id/tv_part_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textColor="@color/text_color_red"
                    android:textSize="11.0sp"
                    android:text="" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_part"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/table_view_item"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingLeft="15.0dip">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/line_gray"
            android:visibility="visible"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15.0dip"
            android:layout_marginTop="15.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/part_icon"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dip"
                android:background="@drawable/part"
                android:minHeight="24.0dip"
                android:minWidth="24.0dip"/>

            <TextView
                android:id="@+id/tv_part"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/part_icon"
                android:ellipsize="end"
                android:paddingRight="10.0dip"
                android:singleLine="true"
                android:textColor="@color/text_color_black"
                android:textSize="16.0sp"
                android:hint="部件类型..."/>

            <ImageView
                android:id="@+id/iv_clean_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30.0dip"
                android:background="@drawable/close"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dip"
                android:background="@drawable/ic_setting_arrow"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_brand"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/table_view_item"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingLeft="15.0dip">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/line_gray"
            android:visibility="visible"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15.0dip"
            android:layout_marginTop="15.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_brand"
                android:layout_width="47dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dip"
                android:background="@drawable/excavator_mall"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_brand"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:paddingRight="10.0dip"
                    android:singleLine="true"
                    android:textColor="@color/text_color_black"
                    android:textSize="16.0sp"
                    android:hint="配件品牌..."/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_clean_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30.0dip"
                android:background="@drawable/close"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dip"
                android:background="@drawable/ic_setting_arrow"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ebebeb"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <TextView
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp"
            android:paddingLeft="2dp"
            android:text="产品列表:"
            android:textColor="#353535"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_advance"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="2dp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:clickable="true"
            android:textSize="12sp"
            android:background="@drawable/shape_button"
            android:text="高级搜索" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="#DBDBDB" />
    </RelativeLayout>

    <com.topway.fine.ui.loadmore.LoadMoreListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@drawable/list_item_selector"
        android:divider="@null"
        android:layout_marginTop="2dp"
        style="@style/CommonListViewStyle" />

</LinearLayout>
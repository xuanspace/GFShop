<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="200px"
    android:background="@color/white">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_content_title"
        android:drawablePadding="10.0dip"
        android:layout_centerVertical="true"
        android:paddingLeft="15.0dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:text="掌柜信息"
        android:textSize="15.0sp"
        android:textStyle="normal"
        android:textColor="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="@color/gray_light" />

    <TextView
        android:id="@+id/tv_contact"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView38"
        android:drawableRight="@drawable/icon_call"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip"
        android:paddingTop="10.0dip"
        android:singleLine="true"
        android:text="王先生 020-32236484"
        android:textSize="12.0sp"
        android:textColor="@color/gray"/>



    <TextView
        android:id="@+id/tv_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_contact"
        android:drawableRight="@drawable/icon_location"
        android:paddingBottom="12.0dip"
        android:paddingLeft="15.0dip"
        android:paddingRight="19.0dip"
        android:paddingTop="12.0dip"
        android:singleLine="true"
        android:text="广州天河东圃工程机械设备"
        android:textSize="12.0sp"
        android:textColor="@color/gray"/>

</LinearLayout>
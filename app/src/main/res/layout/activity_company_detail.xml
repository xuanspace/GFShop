<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#ebebeb">

    <include layout="@layout/layout_main_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="@color/common_bg"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingLeft="15.0dip">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="广福工程机械"
            android:hint="公司名称"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_shortname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:text="广福"
            android:textSize="12.0sp"
            android:textColor="@color/text_color_gray"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@drawable/table_view_item"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingLeft="15.0dip">

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:background="@color/line_gray"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15.0dip"
            android:layout_marginTop="15.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dip"
                android:background="@drawable/detail_icon_locate"
                android:minHeight="24.0dip"
                android:minWidth="24.0dip"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_location"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:paddingRight="10.0dip"
                    android:singleLine="true"
                    android:textColor="@color/text_color_black"
                    android:textSize="15sp"
                    android:hint="公司地址"
                    android:text=""/>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_setting_arrow"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/table_view_item"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingLeft="15.0dip">

        <View
            android:layout_width="fill_parent"
            android:layout_marginRight="10dp"
            android:layout_height="1.0px"
            android:background="@color/line_gray"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15.0dip"
            android:layout_marginTop="15.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dip"
                android:background="@drawable/detail_icon_phone"
                android:minHeight="24.0dip"
                android:minWidth="24.0dip"/>

            <TextView
                android:id="@+id/tv_phone"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_phone"
                android:ellipsize="end"
                android:paddingRight="10.0dip"
                android:singleLine="true"
                android:textColor="@color/text_color_black"
                android:textSize="15sp"
                android:hint="电话号码"
                android:text=""/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_setting_arrow"
                android:visibility="gone"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mobile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/table_view_item"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingLeft="15.0dip">

        <View
            android:layout_width="fill_parent"
            android:layout_marginRight="10dp"
            android:layout_height="1.0px"
            android:background="@color/line_gray"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15.0dip"
            android:layout_marginTop="15.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:background="@drawable/mobile"
                android:minHeight="24.0dip"
                android:minWidth="24.0dip"/>

            <TextView
                android:id="@+id/tv_mobile"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_mobile"
                android:ellipsize="end"
                android:paddingRight="10.0dip"
                android:singleLine="true"
                android:textColor="@color/text_color_black"
                android:textSize="15sp"
                android:hint="手机号码"
                android:text=""/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_setting_arrow"
                android:visibility="gone"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_fax"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/table_view_item"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingLeft="15.0dip">

        <View
            android:layout_width="fill_parent"
            android:layout_marginRight="10dp"
            android:layout_height="1.0px"
            android:background="@color/line_gray"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15.0dip"
            android:layout_marginTop="15.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_fax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:background="@drawable/fax"
                android:minHeight="24.0dip"
                android:minWidth="24.0dip"/>

            <TextView
                android:id="@+id/tv_fax"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_fax"
                android:ellipsize="end"
                android:paddingRight="10.0dip"
                android:singleLine="true"
                android:textColor="@color/text_color_black"
                android:textSize="15sp"
                android:hint="传真号码"
                android:text=""/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_setting_arrow"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_man"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/table_view_item"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingLeft="15.0dip">

        <View
            android:layout_width="fill_parent"
            android:layout_marginRight="10dp"
            android:layout_height="1.0px"
            android:background="@color/line_gray"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15.0dip"
            android:layout_marginTop="15.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:background="@drawable/man"
                android:minHeight="24.0dip"
                android:minWidth="24.0dip"/>

            <TextView
                android:id="@+id/tv_man"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_man"
                android:ellipsize="end"
                android:paddingRight="10.0dip"
                android:singleLine="true"
                android:textColor="@color/text_color_black"
                android:textSize="15sp"
                android:hint="联系人"
                android:text=""/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_setting_arrow"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
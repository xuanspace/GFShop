<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff6f7f9">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip">

            <TextView
                style="@style/attr_lable_text"
                android:text="部件品牌"/>

            <EditText
                android:id="@+id/et_thread_title"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/icon_right_arrow"
                android:hint="小松"
                android:maxLength="25"
                android:minHeight="50.0dip"
                android:singleLine="true"
                android:textSize="14sp"
                android:textColorHint="#ffacacac"/>
        </LinearLayout>

        <View style="@style/GrayLineStyle" />

        <LinearLayout
            android:id="@+id/ll_thread_type_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip">

            <TextView
                style="@style/attr_lable_text"
                android:text="挖机机型"/>

            <EditText
                android:id="@+id/et_thread_type"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/icon_right_arrow"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="PC200"
                android:minHeight="50.0dip"
                android:textSize="14sp"
                android:textColorHint="#ffacacac"
                />
        </LinearLayout>

        <View style="@style/GrayLineStyle" />

        <LinearLayout
            android:id="@+id/ll_category"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip">

            <TextView
                style="@style/attr_lable_text"
                android:text="发动机型号"/>

            <EditText
                android:id="@+id/ev_category"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/icon_right_arrow"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="6D95"
                android:minHeight="50.0dip"
                android:textSize="14sp"
                android:textColorHint="#ffacacac"
                />
        </LinearLayout>

        <View style="@style/GrayLineStyle" />

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip">

            <TextView
                style="@style/attr_lable_text"
                android:text="部件名称"/>

            <EditText
                android:id="@+id/ev_name"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="部件分类"
                android:minHeight="50.0dip"
                android:textSize="14sp"
                android:textColorHint="#ffacacac"
                />
        </LinearLayout>

        <View style="@style/GrayLineStyle" />

        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip">

            <TextView
                style="@style/attr_lable_text"
                android:text="部件价格"/>

            <EditText
                android:id="@+id/ev_price"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="0.0"
                android:minHeight="50.0dip"
                android:textSize="14sp"
                android:textColorHint="#ffacacac"
                />
        </LinearLayout>

        <View style="@style/GrayLineStyle" />

        <LinearLayout
            android:id="@+id/ll_quantity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip">

            <TextView
                style="@style/attr_lable_text"
                android:text="部件数量"/>

            <EditText
                android:id="@+id/ev_quantity"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="1"
                android:minHeight="50.0dip"
                android:textSize="14sp"
                android:textColorHint="#ffacacac"
                />
        </LinearLayout>

        <View style="@style/GrayLineStyle" />

        <LinearLayout
            android:id="@+id/ll_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip">

            <TextView
                style="@style/attr_lable_text"
                android:text="描述"/>

            <EditText
                android:id="@+id/ev_description"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="宝贝的描述"
                android:minHeight="50.0dip"
                android:textSize="14sp"
                android:textColorHint="#ffacacac"
                />
        </LinearLayout>


        <View style="@style/GrayLineStyle" />

        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_img_height"
            android:layout_marginTop="10.0dip">

            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="70dp"
                android:gravity="center_horizontal"
                android:text="添加图片"
                android:textColor="@color/text_color_hint"
                android:textSize="14sp" />

            <GridView
                android:id="@+id/gv_photo"
                android:layout_width="290dp"
                android:layout_height="350dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:horizontalSpacing="3dp"
                android:numColumns="4"
                android:scrollbars="none"
                android:verticalSpacing="5dp" >
            </GridView>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/btn_save"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:text="保存"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>
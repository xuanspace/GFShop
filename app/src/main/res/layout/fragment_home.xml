<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/header_home" />

    <com.topway.fine.ui.scrollview.VerticalScrollView
        android:id="@+id/homeScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f6f6f6"
        android:fadingEdge="none"
        android:scrollbars="none"
        android:layout_below="@+id/header">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <include layout="@layout/fragment_home_ads" />
            <include layout="@layout/fragment_home_board" />
            <include layout="@layout/fragment_home_brand" />
            <include layout="@layout/view_divider_bar" />
            <include layout="@layout/fragment_home_hots" />
            <include layout="@layout/view_divider_bar" />
            <include layout="@layout/fragment_home_news" />
            <include layout="@layout/view_divider_bar" />
            <include layout="@layout/fragment_home_category" />
            <include layout="@layout/view_divider_bar" />

        </LinearLayout>
    </com.topway.fine.ui.scrollview.VerticalScrollView>

</RelativeLayout>